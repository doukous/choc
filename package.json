{
  "name": "choc",
  "private": true,
  "version": "0.1.0",
  "author": "Mohamed Doucour√© <mohamed.doucoure@protonmail.com>",
  "description": "an pomodoro timer and a tasks manager",
  "type": "module",
  "main": "dist/backend-electron/main.js",
  "scripts": {
    "start": "npm-run-all --parallel dev:browser dev:electron",
    "start:nodemon": "nodemon -w ./src/desktop-backend -e ts,mts --exec 'npm start'",
    "dev:browser": "vite",
    "dev:electron": "npm run transpile:electron; NODE_ENV=dev electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project tsconfig.electron.json",
    "package": "npm run transpile:electron && npm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "tw-animate-css": "^1.3.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0"
  }
}
